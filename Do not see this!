#include <iostream>
#include <windows.h>
#include <stdlib.h>
#include <conio.h>
#include <stdio.h>
#include <cstring>
#include <time.h>

using namespace std;
char Li[31]="Lisa por favor responde:";
char SM[41]="UN SIMPLE MORTAL NO TIENE PODER SOBRE MI";
char f1[19]="NO!, no quiere :3";
char f2[68]="Deberias creer un poco mas en mi... O tienes que verme para creer?"; 
char f3[60]="Quieres que te lo conteste de cerca... solo mira atras";
char f4[70]="Se que no crees que existo, lo puedo ver ya que estoy cerca de ti";
char f5[59]="La respuesta te la dare en la noche, mientras duermes.";
char f6[49]="Se que tendras miedo a lo que contestare";

//no, no quiere escribir algo

void lisa(){
	int i=1,j,c=0,c2=0;
	char r[100],op,op2;
	memset(r,0,strlen(r));
	printf("%c",Li[0]);
	r[0]='.';
	do{
		if(c2==0){
			do{
				if(i<strlen(Li))
					printf("%c",Li[i]);
				i++;
			}while((r[i]=getch())!='.');
			c2=1;
		}
			if(i<strlen(Li)){
				getch();
				printf("%c",Li[i]);
				i++;
			}
			else{
				c=1;
			}
		
	}while(c==0);
	printf("\n");
	getchar();
	op=getch();
	switch(op)
	{
		case '1':
			{
				printf("\n");
				for(i=0;i<strlen(r);i++)
					if(r[i]=='.'){
					for(j=i+1;r[j]!='.';j++){
						Sleep(100);
						printf("%c",r[j]);
						Beep(800,100);	
						}
						
					}
					Sleep(500);
			}break;
			
		case '2':
			{
			   printf("\n");
               srand (time (NULL));
               op2=rand()%7;
               switch(op2)
               {
               		case 1: 
					   {
					   	for(i=0;i<strlen(f1);i++){
						Sleep(50);
						printf("%c",f1[i]);
						Beep(800,100);
									
						}
						Sleep(500);
					}break;
					case 2: 
					   {
					   	for(i=0;i<strlen(f2);i++){
						Sleep(50);
						printf("%c",f2[i]);
						Beep(800,100);	
							
						}
						Sleep(500);	
					}break;
					case 3:
						{
						 for(i=0;i<strlen(f3);i++){
						 Sleep(50);
						 printf("%c",f3[i]);
						 Beep(800,100);
						 			
						}
						Sleep(500);	
						}break;
					case 4:
						{
						 for(i=0;i<strlen(f4);i++){
						 Sleep(50);
						 printf("%c",f4[i]);
						 Beep(800,100);
						 			
						}
						Sleep(500);	
						}break;
						
					case 5:
						{
						 for(i=0;i<strlen(f5);i++){
						 Sleep(50);
						 printf("%c",f5[i]);
						 Beep(800,100);
						 			
						}
						Sleep(500);	
						}break;
						
					case 6:
						{
						 for(i=0;i<strlen(f6);i++){
						 Sleep(50);
						 printf("%c",f6[i]);
						 Beep(800,100);
						 			
						}
						Sleep(500);	
						}break;
               };
			}break;
	};
	memset(r,0,strlen(r));
	printf("\n");	
	return;
}

//"me gustas tu, gustas tu, sutuduru johahaeyo" by gfriend

int main(){
	system("color 70");
	int i,c=0;
	do{
		if(getch()=='.'){
			lisa();
		}
		else
		{
			system ("color 0C");
			for(i=0;i<strlen(SM);i++){
				Sleep(100);
				printf("%c",SM[i]);
				Beep(800,100);			
			}
			getch();
		}
		getchar();
		system("CLS");
		if(getch()=='|')
			c=1;
	}while(c==0);
}
